<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="rippleColor" tools:ignore="PrivateResource">@color/mtrl_btn_ripple_color</item>
        <item name="cardMaxElevation">0dp</item> 
        <item name="strokeColor">#70707070</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">0.1dp</item>
        <item name="cardBackgroundColor">#78242424</item>
        <item name="cardCornerRadius">6dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#78242424</item>
        <item name="strokeColor">#70707070</item>
        <item name="strokeWidth">0.1dp</item>
        <item name="android:textColor">@color/textwhite</item>
        <item name="android:insetTop">2dp</item>
        <item name="android:insetBottom">2dp</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/textwhite</item>
    </style>

    <style name="SwitchCompatStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:background">@drawable/background_edit_text_setting</item>
        <item name="android:textColor">@color/textwhite</item>
    </style>

</resources>
